{
  "name": "git-env-vault",
  "version": "0.3.3",
  "description": "CLI + TUI for managing encrypted environment variables in monorepos with SOPS + age",
  "type": "module",
  "bin": {
    "envvault": "./dist/cli/index.js"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": ["dist"],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "vitest run --config vitest.e2e.config.ts",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "typecheck": "tsc --noEmit",
    "prepare": "npm run build"
  },
  "keywords": ["cli", "sops", "age", "secrets", "env", "encryption", "monorepo", "git"],
  "repository": {
    "type": "git",
    "url": "https://github.com/pas7-studio/git-env-vault"
  },
  "homepage": "https://github.com/pas7-studio/git-env-vault",
  "bugs": {
    "url": "https://github.com/pas7-studio/git-env-vault/issues"
  },
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@inquirer/prompts": "^7.0.0",
    "chalk": "^5.3.0",
    "commander": "^12.0.0",
    "execa": "^8.0.1",
    "js-yaml": "^4.1.0",
    "yaml": "^2.3.4",
    "fast-safe-stringify": "^2.1.1",
    "tweetnacl": "^1.0.3",
    "tmp-promise": "^3.0.3",
    "ora": "^8.0.1",
    "picocolors": "^1.0.0",
    "glob": "^10.3.10"
  },
  "devDependencies": {
    "typescript": "^5.3.0",
    "tsup": "^8.0.1",
    "vitest": "^1.2.0",
    "@vitest/coverage-v8": "^1.2.0",
    "eslint": "^8.56.0",
    "@typescript-eslint/parser": "^6.19.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "prettier": "^3.2.4",
    "@types/node": "^20.11.0",
    "@types/js-yaml": "^4.0.9",
    "tempy": "^3.1.0"
  }
}
